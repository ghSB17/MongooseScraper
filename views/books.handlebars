<div class="container">
    <div class="container row">
        <div class="col-md-3 col-lg-3">
            <a class="btn btn-primary" id="scrapedData" href="/scrapeAn" role="button">Scrape for New Javascript Books</a>
        </div>
    </div>
</div>
<br>
<br> {{#each books}}
<div class="container">

    <div class="container row">
        <div class="col-md-3 col-lg-3">
            <img src={{imgSrc}} alt=${{title}} height='218' width='218'>
        </div>

        <div class="col-md-7 col-lg-7">
            <div class="row">
                <h5>
                    <span>
                        <strong>{{title}}</strong>
                    </span>
                </h5>
            </div>
            <div class="row">
                <h5>
                    <span>Author(s): {{author}}</span>
                </h5>
            </div>
            <div class="row">
                <h5>
                    <span>Price: {{price}}</span>
                </h5>
            </div>
        </div>

        <div class="col-md-2 col-lg-2">
            <a class="btn btn-primary" id="comments" href='/jsbook/{{_id}}' role="button">Comments/Reviews</a>
            {{!-- {{#if Comments}}
            <button class="btn btn-primary cmnts" data-id='{{_id}}' data-link={{link}} data-comments={{Comments}}>Comments</button>
            {{else}}
            <button class="btn btn-primary cmnts" data-id='{{_id}}' data-link={{link}} data-comments=[]>Comments</button>
            {{/if}} --}}
        </div>



    </div>
    <br>
    <br>

</div>
{{/each}}
</div>